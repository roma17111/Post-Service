<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="admin">

    </changeSet>

    <changeSet id="1" author="roman.create.post.1">
        <preConditions>
            <not>
                <tableExists tableName="post_offices"/>
            </not>
        </preConditions>
        <createTable tableName="post_offices">
            <column name="office_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="index" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(60)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createIndex tableName="post_offices" indexName="INDEX_FROM_NAME">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="2.create-table-status" author="roman">
        <preConditions>
            <not>
                <tableExists tableName="post_statuses"/>
            </not>
        </preConditions>

        <createTable tableName="post_statuses">
            <column name="status_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
       <createIndex tableName="post_statuses" indexName="DATE_INDEX">
           <column name="date"></column>
       </createIndex>
    </changeSet>

    <changeSet id="4.addCOlumn-to-status" author="roman">
<addColumn tableName="post_statuses">
    <column name="post_office" type="BIGINT">
        <constraints nullable="false"/>
    </column>
</addColumn>
        <addForeignKeyConstraint baseTableName="post_statuses"
                                 baseColumnNames="post_office"
                                 constraintName="POST_OFFICE_COLUMN"
                                 referencedTableName="post_offices"
                                 referencedColumnNames="office_id"/>
    </changeSet>

    <changeSet id="5.create-post-table" author="roman">
        <preConditions>
            <not>
                <tableExists tableName="posts"/>
            </not>
        </preConditions>

        <createTable tableName="posts">
            <column name="post_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="type_of_posts" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="index_recieved" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="address_recieved" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="posts" indexName="NAME_INDEX">
            <column name="name"/>
        </createIndex>

        <addForeignKeyConstraint baseTableName="posts"
                                 baseColumnNames="status_id"
                                 constraintName="STATUSES_HISTORY"
                                 referencedTableName="post_statuses"
                                 referencedColumnNames="status_id"/>
    </changeSet>
</databaseChangeLog>